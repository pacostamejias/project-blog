<%- include("partials/header.ejs") %>

<div class="container">
    <h2>Write new post</h2>
    <form action="/submit" method="POST" class="create-form">        
        <div class="mb-3">
            <label for="postTitle" class="form-label">Title</label>
            <input type="text" class="form-control" id="postTitle" name="postTitle">
        </div>
        <div class="mb-3">
            <label for="postContent" class="form-label">Content</label>
            <textarea class="form-control" id="postContent" rows="10" name="postContent"></textarea>
        </div>
        <div class="mb-3">
            <label for="postAuthor" class="form-label">Author name</label>
            <input type="text" class="form-control" id="postAuthor" name="postAuthor">
        </div>
        <div class="form-buttons">
            <a class="btn btn-secondary me-2" href="/back">Back</a>
            <button type="submit" class="btn btn-primary">Submit</button>            
        </div>
    </form>
</div>

